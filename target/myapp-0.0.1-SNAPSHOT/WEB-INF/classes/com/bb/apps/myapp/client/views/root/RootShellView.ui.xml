<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	</ui:style>
	<ui:with type="com.bb.apps.myapp.client.IMyAppResources" field="res"></ui:with>
	
	<g:ScrollPanel>
	<g:FlowPanel styleName="{res.myAppStyles.themeBackground}">
		<g:FlowPanel styleName="{res.myAppStyles.centerBodyAlign}">
			<g:HTMLPanel width="100%">
				<g:HTMLPanel ui:field="header"></g:HTMLPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel width="100%">
				<g:HTMLPanel ui:field="navBar"></g:HTMLPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel width="100%">
				<g:HTMLPanel ui:field="content"></g:HTMLPanel>
			</g:HTMLPanel>
			
			<g:HTMLPanel width="100%">
				<g:HTMLPanel ui:field="footer"></g:HTMLPanel>
			</g:HTMLPanel>
		</g:FlowPanel>
	</g:FlowPanel>	
	</g:ScrollPanel>
</ui:UiBinder> 